<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- SemiTheme 补充自定义样式 — 不再覆盖全局控件默认样式 -->

    <!-- 窗口字体 -->
    <Style Selector="Window">
        <Setter Property="FontFamily" Value="{DynamicResource DefaultFontFamily}"/>
    </Style>

    <!-- 导航按钮样式 -->
    <Style Selector="Button.nav-button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.nav-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
    </Style>

    <Style Selector="Button.nav-button:pressed">
        <Setter Property="Background" Value="{DynamicResource AccentHover}"/>
    </Style>

    <!-- 导航区域背景 -->
    <Style Selector="Border.navigation-panel">
        <Setter Property="Background" Value="{DynamicResource NavigationBackground}"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="CornerRadius" Value="0,8,8,0"/>
    </Style>

    <!-- 内容区域 -->
    <Style Selector="UserControl.content-area">
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- 标签样式 -->
    <Style Selector="Border.tag">
        <Setter Property="Background" Value="{DynamicResource TagBlueBg}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style Selector="Border.tag TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TagForeground}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- 卡片样式 -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource SubtleBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SeparatorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- StackPanel和Grid背景 -->
    <Style Selector="StackPanel.content-panel">
        <Setter Property="Margin" Value="16"/>
    </Style>

    <Style Selector="Grid.content-grid">
        <Setter Property="Background" Value="{DynamicResource ContentBackground}"/>
    </Style>

    <!-- 标题文本样式 -->
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,8,0,8"/>
    </Style>

    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <!-- 可拖拽列表 -->
    <Style Selector=":is(ListBox).draggable > :is(ListBoxItem)">
        <Setter Property="ZIndex" Value="0" />
    </Style>

    <!-- 图标字体 -->
    <Style Selector="TextBlock.icon-outline">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
    </Style>
    <Style Selector="Label.icon-outline">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
    </Style>

</Styles>