<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- SemiTheme 补充自定义样式 -->

    <!-- 窗口字体 -->
    <Style Selector="Window">
        <Setter Property="FontFamily" Value="{DynamicResource DefaultFontFamily}"/>
    </Style>

    <!-- 导航按钮样式 -->
    <Style Selector="Button.nav-button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,1"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.nav-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
    </Style>

    <Style Selector="Button.nav-button:pressed">
        <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="RenderTransform" Value="scale(0.97)"/>
    </Style>

    <!-- 导航区域背景（带宽度动画） -->
    <Style Selector="Border.navigation-panel">
        <Setter Property="Background" Value="{DynamicResource NavigationBackground}"/>
        <Setter Property="Padding" Value="10,16"/>
        <Setter Property="CornerRadius" Value="0,12,12,0"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Width" Duration="0:0:0.25" Easing="CubicEaseInOut"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- 内容区域 -->
    <Style Selector="UserControl.content-area">
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- 标签样式 -->
    <Style Selector="Border.tag">
        <Setter Property="Background" Value="{DynamicResource TagBlueBg}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style Selector="Border.tag TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TagForeground}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- 卡片样式 -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource SubtleBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SeparatorBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- 面板区块样式 -->
    <Style Selector="Border.section-panel">
        <Setter Property="Background" Value="{DynamicResource SubtleBackground}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- StackPanel和Grid背景 -->
    <Style Selector="StackPanel.content-panel">
        <Setter Property="Margin" Value="16"/>
    </Style>

    <Style Selector="Grid.content-grid">
        <Setter Property="Background" Value="{DynamicResource ContentBackground}"/>
    </Style>

    <!-- 标题文本样式 -->
    <Style Selector="TextBlock.page-title">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>

    <Style Selector="TextBlock.page-subtitle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource MutedText}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,8,0,8"/>
    </Style>

    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <!-- 空状态样式 -->
    <Style Selector="StackPanel.empty-state">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Spacing" Value="12"/>
    </Style>

    <!-- 可拖拽列表 -->
    <Style Selector=":is(ListBox).draggable > :is(ListBoxItem)">
        <Setter Property="ZIndex" Value="0" />
    </Style>

    <!-- 图标字体 -->
    <Style Selector="TextBlock.icon-outline">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
    </Style>
    <Style Selector="Label.icon-outline">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
    </Style>

</Styles>