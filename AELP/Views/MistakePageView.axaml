<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AELP.ViewModels"
             xmlns:data="clr-namespace:AELP.Data"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AELP.Views.MistakePageView"
             x:DataType="vm:MistakePageViewModel">
    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="错题本" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="最近答错的单词会显示在这里" VerticalAlignment="Center" Foreground="{DynamicResource MutedText}"/>
            <CheckBox Content="显示已掌握" IsChecked="{Binding ShowMasteredWords}" VerticalAlignment="Center" Margin="10,0,0,0" />
            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center" Margin="10,0,0,0">
                <TextBlock Text="排序:" VerticalAlignment="Center" Foreground="{DynamicResource MutedText}"/>
                <ComboBox Width="180"
                          ItemsSource="{Binding SortOptions}"
                          SelectedItem="{Binding SelectedSortOption}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Display}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <!-- 错误单词 -->
        <ScrollViewer Grid.Row="1" Margin="0,10,0,0" IsVisible="{Binding Items.Count}">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="data:MistakeDataModel">
                        <Border Classes="MistakeCard" Classes.mastered="{Binding IsMastered}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" OffsetY="2" Opacity="0.1"/>
                            </Border.Effect>
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Word}" FontSize="20" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" 
                                           Grid.Column="1" 
                                           Text="{Binding Count, StringFormat='×{0}'}" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource AccentOrange}"/>
                                <TextBlock Grid.Row="1" 
                                           Grid.Column="0" 
                                           Grid.ColumnSpan="2" 
                                           Text="{Binding Translation}"  
                                           TextWrapping="Wrap" 
                                           Foreground="{DynamicResource AccentPurple}" 
                                           Margin="0,6,0,0"/>
                                <StackPanel Grid.Row="2" 
                                            Grid.Column="0" 
                                            Grid.ColumnSpan="2" 
                                            Orientation="Horizontal" 
                                            Spacing="10" 
                                            Margin="0,8,0,0">
                                    <TextBlock Text="最近错题时间:" 
                                               Foreground="{DynamicResource MutedText}" 
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Time, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                               Foreground="{DynamicResource HighlightText}" 
                                               FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <!-- 无错误提示 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8" IsVisible="{Binding !Items.Count}">
            <TextBlock Text="👌" FontSize="48" HorizontalAlignment="Center"/>
            <TextBlock Text="暂无错误单词" FontSize="16" Foreground="{DynamicResource DimText}" HorizontalAlignment="Center"/>
            <TextBlock Text="完成测试后，错误单词会显示在这里" FontSize="14" Foreground="{DynamicResource HintText}" HorizontalAlignment="Center"/>
        </StackPanel>
        <!-- 复习 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="开始复习" Command="{Binding GoToReviewCommand}" IsVisible="{Binding Items.Count}" />
            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                <TextBlock Text="测试数量:" VerticalAlignment="Center" Foreground="{DynamicResource MutedText}"/>
                <NumericUpDown Value="{Binding MaxTestCount}" Minimum="1" Maximum="1000" Increment="5" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
