<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AELP.ViewModels"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="AELP.Views.SummaryPageView"
             x:DataType="vm:SummaryPageViewModel">
    
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <!-- 标题 -->
            <TextBlock Text="测试结果" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>
            
            <!-- 统计卡片区域 -->
            <Grid ColumnDefinitions="*,*,*,*" Margin="0,0,0,20">
                <!-- 总题数 -->
                <Border Grid.Column="0" 
                        Background="#E3F2FD" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="总题数" 
                                   FontSize="14" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalQuestions}" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- 正确数 -->
                <Border Grid.Column="1" 
                        Background="#E8F5E9" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="正确" 
                                   FontSize="14" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CorrectCount}" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#388E3C"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- 错误数 -->
                <Border Grid.Column="2" 
                        Background="#FFEBEE" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="错误" 
                                   FontSize="14" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding WrongCount}" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#D32F2F"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- 准确率 -->
                <Border Grid.Column="3" 
                        Background="#FFF3E0" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="准确率" 
                                   FontSize="14" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding AccuracyText}" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="#F57C00"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- 图表区域 -->
            <Grid ColumnDefinitions="*,*" MinHeight="300">
                <!-- 饼状图 - 单词耗时分布 -->
                <Border Grid.Column="0" 
                        Background="#FAFAFA" 
                        CornerRadius="10" 
                        Padding="15" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="单词答题耗时分布" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <lvc:PieChart Series="{Binding TimePieSeries}"
                                      Height="250"
                                      LegendPosition="Right"/>
                    </StackPanel>
                </Border>
                
                <!-- 折线图 - 历次测试准确率 -->
                <Border Grid.Column="1" 
                        Background="#FAFAFA" 
                        CornerRadius="10" 
                        Padding="15" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="历次测试准确率趋势" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <lvc:CartesianChart Series="{Binding AccuracyLineSeries}"
                                            XAxes="{Binding AccuracyXAxes}"
                                            YAxes="{Binding AccuracyYAxes}"
                                            Height="250"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- 总用时 -->
            <Border Background="#F5F5F5" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <TextBlock Text="本次测试总用时:" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalTimeText}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- 单词详情列表 -->
            <Border Background="#FAFAFA" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="答题详情" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    <!-- 表头 -->
                    <Grid ColumnDefinitions="150,*,80,80" 
                          Background="#E0E0E0" 
                          Margin="0,0,0,5">
                        <TextBlock Text="单词" 
                                   Grid.Column="0" 
                                   FontWeight="SemiBold" 
                                   Padding="10,8"/>
                        <TextBlock Text="翻译" 
                                   Grid.Column="1" 
                                   FontWeight="SemiBold" 
                                   Padding="10,8"/>
                        <TextBlock Text="结果" 
                                   Grid.Column="2" 
                                   FontWeight="SemiBold" 
                                   Padding="10,8"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="用时" 
                                   Grid.Column="3" 
                                   FontWeight="SemiBold" 
                                   Padding="10,8"
                                   HorizontalAlignment="Center"/>
                    </Grid>
                    
                    <!-- 列表内容 -->
                    <ItemsControl ItemsSource="{Binding WordResults}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:WordResultItem">
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,0,1"
                                        Padding="0,5">
                                    <Grid ColumnDefinitions="150,*,80,80">
                                        <TextBlock Text="{Binding Word}" 
                                                   Grid.Column="0" 
                                                   Padding="10,5"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Translation}" 
                                                   Grid.Column="1" 
                                                   Padding="10,5"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="2" 
                                                   Padding="10,5"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Text>
                                                <Binding Path="IsCorrect" 
                                                         StringFormat="{}{0}">
                                                </Binding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Text="{Binding TimeSpent}" 
                                                   Grid.Column="3" 
                                                   Padding="10,5"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
