<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AELP.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:DictionaryPageViewModel"
             x:Class="AELP.Views.DictionaryPageView">
    <TabControl Margin="0,0,0,10">
        <TabItem Header="搜翻译">
            <Grid RowDefinitions="Auto,*">
                <Grid ColumnDefinitions="*,Auto" Grid.Row="0" Margin="10">
                    <TextBox Grid.Column="0" Text="{Binding SearchText}" Watermark="请输入单词" Margin="0,0,10,0">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SearchTranslationCommand}" />
                        </TextBox.KeyBindings>
                    </TextBox>
                    <Button Content="搜索" Grid.Column="1" Command="{Binding SearchTranslationCommand}" />
                </Grid>

                <StackPanel Grid.Row="1" Margin="20">
                    <StackPanel.Effect>
                        <BlurEffect Radius="{Binding ContentBlurRadius}" />
                    </StackPanel.Effect>

                    <!-- Exam Tags -->
                    <ItemsControl ItemsSource="{Binding ExamTags}" Margin="0,0,0,15">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#660078D7" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="{Binding}" Foreground="White" FontSize="12" FontWeight="SemiBold" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Translation Result -->
                    <TextBlock Text="{Binding SearchResult}"
                               FontSize="16"
                               TextWrapping="Wrap"
                               LineHeight="24" />
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="搜单词">
            <Grid RowDefinitions="Auto,*" Margin="10">
                <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
                    <TextBox Grid.Column="0" Text="{Binding SearchText}" Watermark="请输入" Margin="0,0,10,0">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SearchWordsCommand}" />
                        </TextBox.KeyBindings>
                    </TextBox>
                    <Button Content="搜索" Grid.Column="1" Command="{Binding SearchWordsCommand}"></Button>
                </Grid>
                <ListBox Grid.Row="1" ItemsSource="{Binding SearchResults}" Margin="0,10,0,0" Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                <TextBlock Text="{Binding}" FontSize="16" />
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </TabItem>
    </TabControl>

</UserControl>